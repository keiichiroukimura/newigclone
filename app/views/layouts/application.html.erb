<!DOCTYPE html>
<html>
  <head>
    <title>Kadaiig</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
		<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
  </head> 
  <body>
    <header>
      <div class="container">  
        <h1>unstagram</h1>
        <%= link_to(posts_path) do %>
          <i class="fab fa-instagram fa-2x" style = "margin-top: 5px; margin-left: 250px;"></i>
        <% end %>
          <% if logged_in? %>
            <%= link_to(user_path(current_user.id)) do%>
              <i class="far fa-user fa-2x" style = "margin-left:700px;" ></i>
            <% end %>
            <br>
            <%= link_to "My page", user_path(current_user.id), class: 'btn btn-default prof'%>
            <%= link_to "Logout", session_path(current_user.id), method: :delete, class: 'btn btn-default prof' %>
          <% else %>
            <br>
            <%= link_to "Sign up", new_user_path, class: 'btn btn-default prof' %>
            <%= link_to "Login", new_session_path, class: 'btn btn-default prof'%>
          <% end %>   
        
        <%= link_to "新規投稿", new_post_path, class: 'btn btn-default', id:"new_post" %>  
        <%= link_to 'お気に入り一覧', favorites_path, class:"btn btn-default index" %>
          
          <section id = "log_in_error">
            <% flash.each do |key, value| %>
              <%= content_tag(:div, value, class: "#{key}") %>
            <% end %>
          </section>
      </div>
    </header>
    <%= yield %>
  </body>
</html>
