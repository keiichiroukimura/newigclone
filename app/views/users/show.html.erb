<section id = "mypage">
		<%= image_tag (@user.image.url) if @user.image && @user.image.url  %>
		<br>
	<div class="form-group">
		<%= "name" %>
		<div class="well well-sm">
		<%= @user.name %>
		</div>
	</div>
	<div class="form-group">
		<%= "メールアドレス"%>
		<br>
		<div class="well well-sm">
		<%= @user.email  %>
		</div>
	</div>
		<br>
	<div class="form-group">
		<%= "自己紹介" %>
		<br>
		<div class="well well-sm">
		<%= simple_format(@user.content)  %>
		</div>
	</div>	
		<br>
		<% if current_user.id == @user.id %>
			<%= link_to 'プロフィール編集', edit_user_path(@user), class:"btn btn-default" %>
		<% elsif %>
			<%= link_to '一覧', edit_user_path(@user), class:"btn btn-default" %>
		<% end %>
</section>